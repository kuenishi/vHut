<!--- The default skin class for the Spark SkinnableDataContainer container.

     @see spark.components.SkinnableDataContainer

      @langversion 3.0
      @playerversion Flash 10
      @playerversion AIR 1.5
      @productversion Flex 4
-->
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark">
    <fx:Metadata>[HostComponent("jp.co.ntts.vhut.comp.va.presentation.connector.ConnectorGroup")]</fx:Metadata>

    <s:states>
        <s:State name="normal" />
        <s:State name="disabled" />
		<s:State name="hovered" />
    </s:states>
	<s:Group id="cursor" width="10" height="10">
		<s:Rect x="-5" width="10" height="10">
			<s:fill>
				<s:SolidColor color="#000000" alpha="0" alpha.hovered="0.2"/>
			</s:fill>
		</s:Rect>
	</s:Group>

	<s:Group id="background" width="100%" height="100%">
		<s:Rect width="100%" height="100%">
			<s:fill>
				<s:SolidColor color="#000000" alpha="0"/>
			</s:fill>
		</s:Rect>
	</s:Group>

    <!--
      Note: setting the minimum size to 0 here so that changes to the host component's
      size will not be thwarted by this skin part's minimum size.   This is a compromise,
      more about it here: http://bugs.adobe.com/jira/browse/SDK-21143
    -->
    <!--- @copy spark.components.SkinnableDataContainer#dataGroup -->
    <s:DataGroup id="dataGroup" left="0" right="0" top="0" bottom="0" minWidth="0" minHeight="0">
        <s:layout>
            <s:HorizontalLayout horizontalAlign="center" />
        </s:layout>
    </s:DataGroup>

</s:Skin>
