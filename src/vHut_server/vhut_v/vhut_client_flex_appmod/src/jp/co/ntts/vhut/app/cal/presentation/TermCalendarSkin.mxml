<!--- The default skin class for the Spark SkinnableDataContainer container.

     @see spark.components.SkinnableDataContainer

      @langversion 3.0
      @playerversion Flash 10
      @playerversion AIR 1.5
      @productversion Flex 4
-->
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark">
    <fx:Metadata>[HostComponent("jp.co.ntts.vhut.app.cal.presentation.TermCalendar")]</fx:Metadata>

    <s:states>
        <s:State name="normal" />
        <s:State name="disabled" />
    </s:states>

	<s:layout>
		<s:VerticalLayout gap="5" horizontalAlign="center"/>
	</s:layout>

	<s:DataGroup id="headerDataGroup" width="100%" height="12">
		<s:layout>
			<s:HorizontalLayout gap="0"
								requestedColumnCount="7"
								horizontalAlign="center"
								variableColumnWidth="true"/>
		</s:layout>
	</s:DataGroup>

    <!--
      Note: setting the minimum size to 0 here so that changes to the host component's
      size will not be thwarted by this skin part's minimum size.   This is a compromise,
      more about it here: http://bugs.adobe.com/jira/browse/SDK-21143
    -->
    <!--- @copy spark.components.SkinnableDataContainer#dataGroup -->
    <s:DataGroup id="dataGroup" width="100%" height="100%" minWidth="0" minHeight="0">
        <s:layout>
            <s:TileLayout
				verticalGap="0" horizontalGap="0"
				requestedColumnCount="7" requestedRowCount="6"
				columnAlign="justifyUsingWidth" rowAlign="justifyUsingHeight"
				/>
        </s:layout>
    </s:DataGroup>

</s:Skin>
